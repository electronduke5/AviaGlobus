@model AviaGlobus.Models.User;

@{
    ViewData["Title"] = "Авторизация";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<form asp-controller="login" asp-action="loging">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5">

                        <h3 class="text-center">Вход</h3>

                        <div class="input-wrapper mb-4">
                            <input type="text" asp-for="Login" placeholder="Логин" id="lg_username" />
                            <span asp-validation-for="Login" class="validator"></span>
                        </div>

                        <div class="input-wrapper mb-4">
                            <input type="password" asp-for="Password" id="lg_password" placeholder="Пароль" />
                            <div class="input-icon" id="icon" onclick="togglePassword()">
                                <img src="~/css/eye.svg" />
                            </div>
                            <span asp-validation-for="Password" class="validator"></span>
                        </div>


                        <button class="btn btn-primary btn-lg btn-block" type="submit">Войти</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    function togglePassword() {
        var input = document.getElementById('lg_password');
        var icon = document.getElementById('icon');

        if (input.type == "password") {
            input.type = "text";
            icon.classList.add('selected');
        } else {
            input.type = "password";
            icon.classList.remove('selected');
        }
    }
</script>